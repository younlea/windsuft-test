<?xml version="1.0"?>
<robot name="sample_hand" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="PalmColor">
    <color rgba="0.8 0.7 0.65 1.0"/>
  </material>
  <material name="FingerColor">
    <color rgba="0.88 0.82 0.78 1.0"/>
  </material>
  <material name="JointColor">
    <color rgba="0.35 0.35 0.38 1.0"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.08 0.075 0.02"/>
      </geometry>
      <material name="PalmColor"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.075 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.25"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0005" iyy="0.0005" izz="0.0006" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Thumb -->
  <link name="thumb_cmc_link">
    <visual>
      <geometry>
        <sphere radius="0.013"/>
      </geometry>
      <material name="JointColor"/>
    </visual>
  </link>

  <joint name="thumb_cmc" type="revolute">
    <parent link="base_link"/>
    <child link="thumb_cmc_link"/>
    <origin xyz="0.02 -0.03 0.0" rpy="0 0 -0.785"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.79" upper="0.79" effort="2.5" velocity="2.0"/>
  </joint>

  <link name="thumb_proximal">
    <visual>
      <origin xyz="0.0175 0 0"/>
      <geometry>
        <cylinder length="0.035" radius="0.012"/>
      </geometry>
      <material name="FingerColor"/>
    </visual>
  </link>

  <joint name="thumb_mcp" type="revolute">
    <parent link="thumb_cmc_link"/>
    <child link="thumb_proximal"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1.6" effort="2.5" velocity="3.0"/>
  </joint>

  <link name="thumb_middle">
    <visual>
      <origin xyz="0.0125 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.01"/>
      </geometry>
      <material name="FingerColor"/>
    </visual>
  </link>

  <joint name="thumb_ip_prox" type="revolute">
    <parent link="thumb_proximal"/>
    <child link="thumb_middle"/>
    <origin xyz="0.035 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1.9" effort="2.0" velocity="3.0"/>
  </joint>

  <link name="thumb_distal">
    <visual>
      <origin xyz="0.01 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.009"/>
      </geometry>
      <material name="FingerColor"/>
    </visual>
  </link>

  <joint name="thumb_ip_dist" type="revolute">
    <parent link="thumb_middle"/>
    <child link="thumb_distal"/>
    <origin xyz="0.025 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1.9" effort="1.5" velocity="3.0"/>
  </joint>

